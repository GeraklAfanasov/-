[bandit]
# Конфигурационный файл для bandit
# Игнорируем предупреждения, которые не являются реальными проблемами в данном контексте

# B104: host='0.0.0.0' необходим для работы с Nginx и балансировки нагрузки
# B404: subprocess используется безопасно (не с shell=True, не с пользовательским вводом)
# B603: subprocess.Popen используется безопасно (контролируемые входные данные)

exclude_dirs = .git,.github,__pycache__
